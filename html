<body>
  <header>🎬 وێب‌سایت سەیرکردنی فیلم</header>

  <div class="search-bar">
    <input type="text" id="search" placeholder="ناوی فیلمەکە بنووسە...">
  </div>

  <div class="movies" id="movies-list">
    <!-- فیلمەکان لێرە دەنیشانرێن -->
  </div>

  <script>
    // لیستی فیلمەکان (نمونە)
    const movies = [
      { title: "Inception", year: 2010, image: "https://m.media-amazon.com/images/I/51zUbui+gbL._AC_.jpg" },
      { title: "Interstellar", year: 2014, image: "https://m.media-amazon.com/images/I/91kFYg4fX3L._AC_SL1500_.jpg" },
      { title: "The Dark Knight", year: 2008, image: "https://m.media-amazon.com/images/I/71pVzW6pJQL._AC_SL1024_.jpg" },
      { title: "Avengers: Endgame", year: 2019, image: "https://m.media-amazon.com/images/I/81ai6zx6eXL._AC_SL1500_.jpg" },
      { title: "Joker", year: 2019, image: "https://m.media-amazon.com/images/I/71Kk7JZ1uLL._AC_SY679_.jpg" }
    ];

    const moviesList = document.getElementById("movies-list");
    const searchInput = document.getElementById("search");

    function displayMovies(list) {
      moviesList.innerHTML = "";
      list.forEach(movie => {
        const card = document.createElement("div");
        card.classList.add("movie-card");
        card.innerHTML = `
          <img src="${movie.image}" alt="${movie.title}">
          <div class="movie-info">
            <h3>${movie.title}</h3>
            <p>${movie.year}</p>
          </div>
        `;
        moviesList.appendChild(card);
      });
    }

    // نمایش فیلمەکان
    displayMovies(movies);

    // گەڕان
    searchInput.addEventListener("input", (e) => {
      const value = e.target.value.toLowerCase();
      const filtered = movies.filter(m => m.title.toLowerCase().includes(value));
      displayMovies(filtered);
    });
  </script>
</body>
</html>
